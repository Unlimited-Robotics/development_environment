{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gary Navigation V4",
            "request": "launch",
            "type": "cppdbg",
            "miDebuggerServerAddress": "localhost:3000",
            "miDebuggerPath": "gdb",
            "cwd": "${workspaceFolder}",
            "program": "/gary/build/nav_server_4/ros_pkgs/install/gary_navigation_4/lib/gary_navigation_4/navigation_engine",
            "sourceFileMap":{
                    "/gary/ros_pkgs/gary_navigation_4":"${workspaceFolder}/ros_pkgs/gary_robot/gary_navigation_4",
                    "/gary/ros_pkgs/gary_fsm_cpp":"${workspaceFolder}/ros_pkgs/gary_common/gary_fsm_cpp",
                }
        },
        {
            "name": "Gary Sensors Engine",
            "request": "launch",
            "type": "cppdbg",
            "miDebuggerServerAddress": "192.168.12.115:3000",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "program": "/home/camilo/Downloads/sensors_engine",
            "sourceFileMap":{
                "/gary/src/ros_pkgs/gary_sensors_cpp":"${workspaceFolder}/ros_pkgs/gary_robot/gary_sensors_cpp",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Gary Sensors Engine 2",
            "request": "attach",
            "type": "gdb",
            "target": "192.168.12.115:3000",
            "gdbpath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "executable": "/gary/build/ros_pkgs/install/gary_sensors_cpp/lib/gary_sensors_cpp/sensors_engine",
            "remote": true,
            "printCalls": true,
            "valuesFormatting": "parseText",
            // "sourceFileMap":{
            //         "/gary/src/ros_pkgs/gary_sensors_cpp":"${workspaceFolder}/ros_pkgs/gary_robot/gary_sensors_cpp",
            //     }
        }
    ]
}